<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.Autentication.RecoverPasswordPage">
    <ContentPage.Content>
       <Grid VerticalOptions="CenterAndExpand">
           <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions>

           <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Label Text="Enter Your Email" FontSize="Title" VerticalOptions="Start" />
           </StackLayout>

           <StackLayout Grid.Row="1">
                <Entry x:Name="Forgot_email" Placeholder="Email" HorizontalOptions="FillAndExpand" Margin="20,0,20,0"/>
       
                <Button x:Name="forgotPwd_btn" VerticalOptions="Start"
                        Text="Send Email" Clicked="forgotPwd_btn_Clicked"
                        BackgroundColor="#8b52ff" TextColor="White" CornerRadius="10" Margin="20,40,20,0"/>
            </StackLayout>


       </Grid>
            
    </ContentPage.Content>
</ContentPage>
