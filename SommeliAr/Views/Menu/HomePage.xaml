<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Home" Icon="home.png"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.Menu.HomePage">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0">
                    <Label Text="Welcome back User!" FontSize="25" TextColor="#8b52ff"
                       HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="20,32,0,0"/>
                </StackLayout>

                <StackLayout Grid.Row="1" BackgroundColor="Black" HorizontalOptions="Fill"/>

                <StackLayout>

                </StackLayout>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
