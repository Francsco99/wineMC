<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Settings" Icon="settings.png"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.Menu.SettingsPage">

        <ContentPage.Content>
            <TableView Intent="Settings" Margin="0,30,0,0">
              
    <TableRoot TextColor="#b794ff">
        <TableSection Title="My settings" TextColor="#b794ff">
            <SwitchCell Text="Show my name" On="true"/>
            <SwitchCell Text="Update app automatically"/>
            <TextCell Text="Change Password" TextColor="#b794ff"/>
            
        </TableSection>
    </TableRoot>
                
</TableView>
        </ContentPage.Content>
    </ContentPage>
