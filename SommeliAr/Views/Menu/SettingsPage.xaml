<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Settings" Icon="settings.png"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.Menu.SettingsPage">

        <ContentPage.Content>
            <TableView Intent="Settings" Margin="0,30,0,0">
              
    <TableRoot>
        
        <TableSection Title="My settings">
            <SwitchCell Text="Show my name" On="true"/>
            <SwitchCell Text="Update app automatically"/>
            <TextCell Text="Change Password"/>
            <EntryCell Placeholder="Old password"/>
            <EntryCell Placeholder="New password"/>

        </TableSection>
    </TableRoot>
</TableView>
        </ContentPage.Content>
    </ContentPage>
