<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.MyListPageDetail">
    <ContentPage.Content>

        <StackLayout>
            <Label x:Name="MyItemNameShow" HorizontalTextAlignment="Center" FontSize="Title"/>
            <Image x:Name="MyImageCall" HeightRequest="300" WidthRequest="300"/>
            <Label Text="Description" Margin="20,20" FontSize="Subtitle"/>
            <Label x:Name="MyDescriptionShow" Margin="20,0,0,0" FontSize="Medium"/>
            <Button x:Name="Add_to_fav_btn" Text="ADD TO FAV" Clicked="Add_to_fav_btn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
