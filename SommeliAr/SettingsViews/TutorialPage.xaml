    x:Class="SommeliAr.SettingsViews.TutorialPage">

    <StackLayout>
    <CarouselView x:Name="TheCarousel">
    <CarouselView.ItemsSource>
        <x:Array Type="{x:Type x:String}">
            <x:String>https://wips.plug.it/cips/initalia.virgilio.it/cms/2020/07/barolo.jpg</x:String>
