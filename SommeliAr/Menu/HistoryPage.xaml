<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="History"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Menu.HistoryPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Label x:Name="History_btn"
                   Text="History"
                   FontSize="30"
                   TextColor="#8b52ff"/>
        </StackLayout>

        <StackLayout Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Button x:Name="Favourites_btn"
                                Text="Favourites"
                                FontSize="20"
                                TextColor="Black"
                                Clicked="Favourites_btn_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
