<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Icon="home_24pt_2x"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
    x:Class="SommeliAr.Menu.MyHomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--HISTORY BUTTON-->
        <StackLayout Grid.Column="0"
                     Grid.Row="0"
                     VerticalOptions="End"
                     HorizontalOptions="Center"
                     Margin="0,0,20,0">
            <Button x:Name="History_btn"
                   Text="History"
                   FontSize="20"
                   BackgroundColor="Transparent"
                   TextColor="Black"
                   Clicked="History_btn_Clicked"/>
        </StackLayout>

        <!--FAVOURITES BUTTON-->
        <StackLayout Grid.Column="1"
                     Grid.Row="0"
                     VerticalOptions="End"
                     HorizontalOptions="Center"
                     Margin="0,0,20,0">
            <Button x:Name="Favourites_btn"
                                Text="Favourites"
                                FontSize="20"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                Clicked="Favourites_btn_Clicked"/>
        </StackLayout>

        <!--LINEETTA SEPARATRICE-->
        <StackLayout Grid.Row="1"
                     Grid.ColumnSpan="2"
                     BackgroundColor="Black">
        </StackLayout>

        <!--LISTA DEI VINI-->
        <StackLayout Grid.ColumnSpan="2" Grid.Row="2">
            <ListView x:Name="my_list_view"
                     ItemsSource="{Binding WineList}"
                     HasUnevenRows="True"                   
                     ItemTapped="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" RowSpacing="10" ColumnSpacing="10" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <controls:CircleImage
                                   HeightRequest="60"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="CenterAndExpand"
                                   Aspect="AspectFill"
                                   WidthRequest="60"
                                   Grid.RowSpan="2"
                                   Source="{Binding Image}"/>

                                <Label Grid.Column="1"
                                      Text="{Binding Name}"
                                      FontAttributes="Bold"  
                                      VerticalOptions="End"/>

                                <Label Grid.Column="1"
                                      Grid.Row="1"
                                      Text="{Binding Detail}"
                                      FontAttributes="Italic"
                                      VerticalOptions="Start"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </Grid>
</ContentPage>
