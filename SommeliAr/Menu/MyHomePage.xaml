<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Icon="home_24pt_2x"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Menu.MyHomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Button x:Name="History_btn"
                   Text="History"
                   FontSize="20"
                   TextColor="Black"
                   Clicked="History_btn_Clicked"/>
        </StackLayout>

        <StackLayout Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Button x:Name="Favourites_btn"
                                Text="Favourites"
                                FontSize="20"
                                TextColor="Black"
                                Clicked="Favourites_btn_Clicked"/>
        </StackLayout>

        <Label HorizontalOptions="Center"
            Grid.Row="1" Grid.ColumnSpan="2" x:Name="eticehtta_prova"/>
    </Grid>

</ContentPage>
