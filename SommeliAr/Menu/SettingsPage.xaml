<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage Title="Settings" Icon="settings.png"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SommeliAr.Views.Menu.SettingsPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>              
            </Grid.RowDefinitions>
            <TableView Intent="Settings" Grid.Row="0">
                <TableRoot>
                    <TableSection Title="General" TextColor="Black">
                        <SwitchCell Text="Setting #1"/>
                        <SwitchCell Text="Setting #2"/>
                        <SwitchCell Text="Setting #3"/>
                        <SwitchCell Text="Setting #4"/>
                    </TableSection>
                    <TableSection Title="User" TextColor="Black">
                        <TextCell x:Name="user_info_txt_cell"/>
                        <TextCell x:Name="change_pwd_text_cell" Text="Change password" Tapped="change_pwd_text_cell_Tapped"/>
                        <TextCell x:Name="change_username_text_cell" Text="Change username" Tapped="change_username_text_cell_Tapped"/>
                        <TextCell x:Name="change_tastes_text_cell" Text="Change tastes" Tapped="change_tastes_text_cell_Tapped"/>
                        <TextCell x:Name="logout_txt_cell" Text="Logout" Tapped="logout_txt_cell_Tapped"/>
                        <TextCell x:Name="provadb" Text="prova db" Tapped="provadb_Tapped"/>
                    </TableSection>
                </TableRoot>
            </TableView>  
        </Grid>
    </ContentPage.Content>
</ContentPage>
