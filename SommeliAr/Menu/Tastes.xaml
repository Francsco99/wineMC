<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SommeliAr.Views.Tastes">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Padding="20">
                <Label Text=" Choose your Tastes:" FontAttributes="Bold"
                   TextColor="Black" FontSize="26"
                   HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout Grid.Row="1" >
                <Grid Padding="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="150"/>
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Column="0" Grid.Row="0" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="UNO" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1" Grid.Row="0" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="DUE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="2" Grid.Row="0" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="TRE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>



                    <StackLayout Grid.Column="0" Grid.Row="1" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="UNO" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1" Grid.Row="1" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="DUE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="2" Grid.Row="1" >
                        <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="TRE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="0" Grid.Row="2" >
                         <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="UNO" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="1" Grid.Row="2" >
                         <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="DUE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                    <StackLayout Grid.Column="2" Grid.Row="2" >
                         <Button CornerRadius="50" HeightRequest="100" WidthRequest="100" Text="TRE" BorderWidth="2"
                        VerticalOptions="Center" HorizontalOptions="Center"/>
                    </StackLayout>

                </Grid>


            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>


